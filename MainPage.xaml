<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wzornik.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16" BackgroundColor="#FFF8DC">

            <Grid HeightRequest="80">
                <BoxView x:Name="PreviewBox" Color="White"/>
            </Grid>

            <Label Text="Dobierz kolor suwakami i zapisz przyciskiem:" />

            <Grid ColumnDefinitions="Auto,*,50" RowDefinitions="Auto,Auto,Auto" RowSpacing="12">
                <Label Grid.Row="0" Grid.Column="0" Text="R" TextColor="Black" VerticalOptions="Center"/>
                <Slider x:Name="SliderR" Grid.Row="0" Grid.Column="1"
                Minimum="0" Maximum="255" Value="255"
                ValueChanged="OnSliderChanged"/>
                <Label x:Name="LabelR" Grid.Row="0" Grid.Column="2" TextColor="Black" Text="255"
               VerticalOptions="Center" HorizontalTextAlignment="End"/>

                <Label Grid.Row="1" Grid.Column="0" Text="G" TextColor="Black" VerticalOptions="Center"/>
                <Slider x:Name="SliderG" Grid.Row="1" Grid.Column="1"
                Minimum="0" Maximum="255" Value="255"
                ValueChanged="OnSliderChanged"/>
                <Label x:Name="LabelG" Grid.Row="1" Grid.Column="2" TextColor="Black" Text="255"
               VerticalOptions="Center" HorizontalTextAlignment="End"/>

                <Label Grid.Row="2" Grid.Column="0" Text="B" TextColor="Black" VerticalOptions="Center"/>
                <Slider x:Name="SliderB" Grid.Row="2" Grid.Column="1"
                Minimum="0" Maximum="255" Value="255"
                ValueChanged="OnSliderChanged"/>
                <Label x:Name="LabelB" Grid.Row="2" Grid.Column="2" TextColor="Black" Text="255"
               VerticalOptions="Center" HorizontalTextAlignment="End"/>
            </Grid>


            <Button Text="Pobierz"
            BackgroundColor="#CD853F"
            TextColor="White"
            WidthRequest="140"
            HorizontalOptions="Center"
            Clicked="OnClicked" />

            <Grid HeightRequest="40" WidthRequest="220" HorizontalOptions="Center">
                <BoxView x:Name="SavedBox" Color="Transparent"/>
                <Label x:Name="SavedLabel" TextColor="Black" HorizontalOptions="Center" VerticalOptions="Center"/>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
